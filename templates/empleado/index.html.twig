{% extends 'base.html.twig' %}

{% block title %}Listado de Empleados{% endblock %}

{% block body %}
    <div class="container-fluid">
        {% include ('empleado/menu.html.twig') %}
        <div class="card">
            <div class="card-header">
                <h1>Listado de empleados</h1>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="offset-sm-6 offset-md-9 offset-lg-10 col-sm-6 col-md-3 col-lg-2">
                        <a href="{{ path('empleado_new') }}">
                            <button type="button" class="btn btn-success">
                                <i class="bi bi-plus-circle"></i>Agregar empleado
                            </button>
                        </a>
                    </div>
                </div>
                <div class="row">
                    {% for label, messages in app.flashes(['success', 'warning']) %}
                        {% for message in messages %}
                            <div class="flash-{{ label }}">
                                {{ message }}
                            </div>
                        {% endfor %}
                    {% endfor %}
                </div>
                <div class="row">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Cedula</th>
                                <th>Nombre</th>
                                <th>Apellido</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for i, empleado in empleados %}
                            <tr>
                                <td>{{ i + 1 }}</td>
                                <td>{{ empleado.cedula }}</td>
                                <td>{{ empleado.nombre }}</td>
                                <td>{{ empleado.apellido }}</td>
                                <td>
                                    <a href="{{ path('empleado_show', {'id': empleado.id}) }}" class="btn btn-info btn-sm">
                                        <i class="bi bi-clipboard-data"></i>Ver
                                    </a>
                                    <a href="{{ path('empleado_edit', {'id': empleado.id}) }}" class="btn btn-success btn-sm">Editar</a>
                                    <a href="{{ path('empleado_delete', {'id': empleado.id}) }}" class="btn btn-danger btn-sm">Borrar</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5">No se encontraron datos</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                {# Paginador #}
            </div>
        </div>
    </div>
{% endblock %}
